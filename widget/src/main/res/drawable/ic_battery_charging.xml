<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="82dp"
            android:height="55.5dp"
            android:viewportWidth="32.6"
            android:viewportHeight="24.8">

            <!-- 1. 외곽 본체 -->
            <path
                android:fillColor="#000000"
                android:pathData="
                    M9.8,5.3
                    C9.8,4.1 10.9,3.2 12.3,3.2
                    H22.3
                    C23.7,3.2 24.8,4.1 24.8,5.3
                    V21.9
                    C24.8,23.1 23.7,24.0 22.3,24.0
                    H12.3
                    C10.9,24.0 9.8,23.1 9.8,21.9
                    Z" />

            <!-- 2. 흰색 배경 -->
            <path
                android:fillColor="#FFFFFF"
                android:pathData="
                    M12.5,5.0
                    H21.9
                    C22.9,5.0 23.5,5.7 23.5,7.5
                    V19.8
                    C23.5,20.8 22.9,21.5 21.9,21.5
                    H12.5
                    C11.5,21.5 10.9,20.8 10.9,19.8
                    V7.5
                    C10.9,5.7 11.5,5.0 12.5,5.0
                    Z" />

            <!-- 3. 마스킹 및 무한 흐름 그라데이션 -->
            <group android:name="mask_group">
                <!-- 배터리 내부 모양 -->
                <clip-path
                    android:pathData="
                        M12.5,5.0
                        H21.9
                        C22.9,5.0 23.5,5.7 23.5,7.5
                        V19.8
                        C23.5,20.8 22.9,21.5 21.9,21.5
                        H12.5
                        C11.5,21.5 10.9,20.8 10.9,19.8
                        V7.5
                        C10.9,5.7 11.5,5.0 12.5,5.0
                        Z" />

                <!-- 3-1. 2세트 반복 그라데이션 -->
                <group android:name="seamless_flow_group">
                    <path android:pathData="M0,0 H32.6 V49.6 H0 Z">
                        <aapt:attr name="android:fillColor">
                            <gradient
                                android:startY="0"
                                android:endY="49.6"
                                android:type="linear">
                                <!-- 1 Cycle -->
                                <item android:offset="0.0" android:color="#4CD964" />
                                <item android:offset="0.25" android:color="#99F2A6" />
                                <item android:offset="0.5" android:color="#4CD964" />
                                <!-- 2 Cycle -->
                                <item android:offset="0.75" android:color="#99F2A6" />
                                <item android:offset="1.0" android:color="#4CD964" />
                            </gradient>
                        </aapt:attr>
                    </path>
                </group>
            </group>

            <!-- 4. 번개 아이콘 (추가됨) -->
            <!-- fillColor: 투명 (#00000000) -->
            <!-- strokeColor: 검정 (#000000) -->
            <path
                android:fillColor="#00000000"
                android:strokeColor="#000000"
                android:strokeWidth="1.2"
                android:strokeLineJoin="round"
                android:pathData="
                    M17.1,8.3
                    L14.5,13.9
                    H16.3
                    L15.3,20.1
                    L18.1,13.9
                    H16.3
                    L17.1,8.3
                    Z" />

            <!-- 5. 단자 -->
            <path
                android:fillColor="#000000"
                android:pathData="
                    M12.1,0.5
                    V3.2
                    H22.5
                    V0.5
                    Z" />
        </vector>
    </aapt:attr>

    <!-- 애니메이션 설정 (속도 유지: 3000ms) -->
    <target android:name="seamless_flow_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="translateY"
                android:valueFrom="0"
                android:valueTo="-24.8"
                android:valueType="floatType"
                android:duration="2400"
                android:repeatCount="infinite"
                android:repeatMode="restart"
                android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>

</animated-vector>