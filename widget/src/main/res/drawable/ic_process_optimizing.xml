<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="24"
            android:viewportHeight="24">

            <!-- 1. Center Core (RAM Icon as Black Hole) -->
            <!-- 중앙에서 꿀렁거릴 RAM 아이콘 그룹 -->
            <group android:name="core_group" android:pivotX="12" android:pivotY="12">
                <!-- 배경 후광 (선택사항: RAM이 빛나는 느낌) -->
                <path
                    android:fillColor="#00311B92"
                    android:pathData="M12,5 A7,7 0 1,0 12,19 A7,7 0 1,0 12,5 Z"
                    android:alpha="0.2"/>

                <!-- RAM 아이콘 모양 (Core) -->
                <!-- 색상을 기존 블랙홀색(#6200EA)으로 하여 강력한 느낌 전달 -->
                <path
                    android:fillColor="#A4A2A2"
                    android:pathData="M15,9H9v6h6V9zm-2,4h-2v-2h2v2zm8-2V9h-2V7c0-1.1-0.9-2-2-2h-2V3h-2v2h-2V3H9v2H7c-1.1,0-2,0.9-2,2v2H3v2h2v2H3v2h2v2c0,1.1,0.9,2,2,2h2v2h2v-2h2v2h2v-2h2c1.1,0,2-0.9,2-2v-2h2v-2h-2v-2h2zm-4,6H7V7h10v10z" />
            </group>

            <!-- 2. Memory Objects (빨려들어가는 파편들 - 이전과 동일) -->

            <!-- Obj 1: Cache File (문서) - 좌상단 -->
            <group android:name="obj1_group" android:pivotX="4" android:pivotY="4">
                <path
                    android:fillColor="#5B5B5B"
                    android:pathData="M2,2 L5,2 L6,3 L6,6 L2,6 Z M3,3 h2 M3,4 h2 M3,5 h1" />
            </group>

            <!-- Obj 2: Chip (칩) - 우상단 -->
            <group android:name="obj2_group" android:pivotX="20" android:pivotY="4">
                <path
                    android:fillColor="#838282"
                    android:pathData="M18,3 h4 v3 h-4 z M19,6 v1 M21,6 v1 M19,2 v1 M21,2 v1" />
            </group>

            <!-- Obj 3: Kill Process (X 마크) - 우하단 -->
            <group android:name="obj3_group" android:pivotX="20" android:pivotY="20">
                <path
                    android:fillColor="#565656"
                    android:pathData="M18,18 L22,22 M22,18 L18,22"
                    android:strokeColor="#5D5959"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"/>
            </group>

            <!-- Obj 4: Bug (버그) - 좌하단 -->
            <group android:name="obj4_group" android:pivotX="4" android:pivotY="20">
                <path
                    android:fillColor="#424040"
                    android:pathData="M2,20 h4 v-3 h-4 z M2,20 L1,21 M6,20 L7,21 M2,17 L1,16 M6,17 L7,16" />
            </group>

        </vector>
    </aapt:attr>

    <!-- Core Animation: RAM Pulse (RAM이 숨쉬듯 꿀렁거림) -->
    <target android:name="core_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:propertyName="scaleX"
                    android:valueFrom="1"
                    android:valueTo="1.1"
                    android:duration="400"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:valueFrom="1"
                    android:valueTo="1.1"
                    android:duration="400"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate"/>
            </set>
        </aapt:attr>
    </target>

    <!-- Objects Animation: Vortex Suck In (이동 + 축소 + 회전) -->

    <!-- Obj 1 (File) -->
    <target android:name="obj1_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator android:propertyName="translateX" android:valueFrom="0" android:valueTo="8" android:duration="700" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="translateY" android:valueFrom="0" android:valueTo="8" android:duration="700" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="scaleX" android:valueFrom="1" android:valueTo="0" android:duration="700" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="scaleY" android:valueFrom="1" android:valueTo="0" android:duration="700" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="rotation" android:valueFrom="0" android:valueTo="180" android:duration="700" android:repeatCount="infinite"/>
            </set>
        </aapt:attr>
    </target>

    <!-- Obj 2 (Chip) -->
    <target android:name="obj2_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator android:propertyName="translateX" android:valueFrom="0" android:valueTo="-8" android:duration="700" android:startOffset="175" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="translateY" android:valueFrom="0" android:valueTo="8" android:duration="700" android:startOffset="175" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="scaleX" android:valueFrom="1" android:valueTo="0" android:duration="700" android:startOffset="175" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="scaleY" android:valueFrom="1" android:valueTo="0" android:duration="700" android:startOffset="175" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="rotation" android:valueFrom="0" android:valueTo="-180" android:duration="700" android:startOffset="175" android:repeatCount="infinite"/>
            </set>
        </aapt:attr>
    </target>

    <!-- Obj 3 (Kill X) -->
    <target android:name="obj3_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator android:propertyName="translateX" android:valueFrom="0" android:valueTo="-8" android:duration="700" android:startOffset="350" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="translateY" android:valueFrom="0" android:valueTo="-8" android:duration="700" android:startOffset="350" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="scaleX" android:valueFrom="1" android:valueTo="0" android:duration="700" android:startOffset="350" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="scaleY" android:valueFrom="1" android:valueTo="0" android:duration="700" android:startOffset="350" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="rotation" android:valueFrom="0" android:valueTo="180" android:duration="700" android:startOffset="350" android:repeatCount="infinite"/>
            </set>
        </aapt:attr>
    </target>

    <!-- Obj 4 (Bug) -->
    <target android:name="obj4_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator android:propertyName="translateX" android:valueFrom="0" android:valueTo="8" android:duration="700" android:startOffset="525" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="translateY" android:valueFrom="0" android:valueTo="-8" android:duration="700" android:startOffset="525" android:repeatCount="infinite" android:interpolator="@android:interpolator/accelerate_cubic"/>
                <objectAnimator android:propertyName="scaleX" android:valueFrom="1" android:valueTo="0" android:duration="700" android:startOffset="525" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="scaleY" android:valueFrom="1" android:valueTo="0" android:duration="700" android:startOffset="525" android:repeatCount="infinite"/>
                <objectAnimator android:propertyName="rotation" android:valueFrom="0" android:valueTo="-180" android:duration="700" android:startOffset="525" android:repeatCount="infinite"/>
            </set>
        </aapt:attr>
    </target>

</animated-vector>