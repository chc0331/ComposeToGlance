<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">

            <!-- 1. Background RAM (Base) -->
            <path
                android:name="ram_base"
                android:fillColor="#666666"
                android:pathData="M15,9H9v6h6V9zm-2,4h-2v-2h2v2zm8-2V9h-2V7c0-1.1-0.9-2-2-2h-2V3h-2v2h-2V3H9v2H7c-1.1,0-2,0.9-2,2v2H3v2h2v2H3v2h2v2c0,1.1,0.9,2,2,2h2v2h2v-2h2v2h2v-2h2c1.1,0,2-0.9,2-2v-2h2v-2h-2v-2h2zm-4,6H7V7h10v10z" />

            <!-- 2. Masking Group -->
            <group>
                <clip-path
                    android:name="ram_mask"
                    android:pathData="M15,9H9v6h6V9zm-2,4h-2v-2h2v2zm8-2V9h-2V7c0-1.1-0.9-2-2-2h-2V3h-2v2h-2V3H9v2H7c-1.1,0-2,0.9-2,2v2H3v2h2v2H3v2h2v2c0,1.1,0.9,2,2,2h2v2h2v-2h2v2h2v-2h2c1.1,0,2-0.9,2-2v-2h2v-2h-2v-2h2zm-4,6H7V7h10v10z" />

                <!-- 3. Scanner Light -->
                <group
                    android:name="scanner_group"
                    android:translateY="-12">
                    <path
                        android:name="scan_beam"
                        android:fillColor="#8000E5FF"
                        android:pathData="M0,0 h24 v6 h-24 z" />
                </group>
            </group>

        </vector>
    </aapt:attr>

    <!-- Animation 1: Scanner Movement -->
    <target android:name="scanner_group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="translateY"
                android:valueFrom="-6"
                android:valueTo="26"
                android:duration="1500"
                android:repeatCount="infinite"
                android:interpolator="@android:interpolator/accelerate_decelerate" />
        </aapt:attr>
    </target>

    <!-- Animation 2: Color Change -->
    <target android:name="ram_base">
        <aapt:attr name="android:animation">
            <!-- android:evaluator 속성 제거됨 (자동 적용됨) -->
            <objectAnimator
                android:propertyName="fillColor"
                android:duration="1500"
                android:repeatCount="infinite">
                <propertyValuesHolder android:propertyName="fillColor">
                    <keyframe android:fraction="0.0" android:value="#666666"/>
                    <keyframe android:fraction="0.4" android:value="#00E5FF"/>
                    <keyframe android:fraction="1.0" android:value="#666666"/>
                </propertyValuesHolder>
            </objectAnimator>
        </aapt:attr>
    </target>

</animated-vector>