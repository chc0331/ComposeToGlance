<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- Calendar permission for reading public holidays from system calendar -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <queries>
        <!-- 1. [기본] 바탕화면에 아이콘이 있는 앱 (대부분의 앱) -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>

        <!-- 2. [추가] 웹 브라우저 앱 (크롬, 삼성 인터넷, 네이버 등) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>

        <!-- 3. [추가] 공유하기 기능을 가진 앱 (카톡, 인스타, 페이스북 등 SNS/메신저) -->
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="*/*" />
        </intent>

        <!-- 4. [추가] 카메라 기능을 가진 앱 -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application>
        <receiver
            android:name="com.widgetkit.core.provider.LargeWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.widget.test" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/large_appwidget_info" />
        </receiver>

        <receiver
            android:name="com.widgetkit.core.provider.ExtraLargeWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.widget.test" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/extra_large_appwidget_info" />
        </receiver>

        <receiver
            android:name=".action.CustomWidgetActionCallbackBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.test_widget" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".action.WidgetActionVisibleActivity"
            android:theme="@style/Theme.WidgetActionDialog"
            android:exported="false"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:excludeFromRecents="true" />

        <activity
            android:name=".component.reminder.today.ui.TodoActivity"
            android:theme="@style/Theme.WidgetActionDialog"
            android:exported="false"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
    </application>

</manifest>